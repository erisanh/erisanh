{
  /* ===============================
       üåü UI / Window Settings
    =============================== */
  "window.zoomLevel": 0.8,
  "window.customTitleBarVisibility": "windowed",
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.wrapTabs": true,
  "workbench.view.alwaysShowHeaderActions": false,
  "workbench.iconTheme": "vscode-icons",
  "workbench.activityBar.location": "bottom",
  "explorer.compactFolders": false,
  /* ===============================
       üé® Editor Appearance
    =============================== */
  "editor.minimap.enabled": true,
  "editor.wordWrap": "on",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.lineNumbers": "on",
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  // Fonts
  "editor.fontSize": 13.4,
  // Font cho editor
  "editor.fontFamily": "'FiraCode Nerd Font Mono', monospace",
  "editor.fontLigatures": true,
  /* ===============================
       üñ•Ô∏è Terminal Settings
    =============================== */
  "terminal.integrated.env.linux": {
    "NVM_DIR": "/home/iuhane/.nvm",
    "PATH": "/home/iuhane/.nvm/versions/node/v22.*/bin:${env:PATH}",
    "LANG": "en_US.UTF-8"
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "path": "/usr/bin/zsh"
    },
    "bash": {
      "path": "/usr/bin/bash"
    }
  },
  "terminal.integrated.defaultProfile.windows": "Windows PowerShell",
  "terminal.integrated.env.windows": {
    "LANG": "en_US.UTF-8"
  },
  // Terminal font
  "terminal.integrated.fontFamily": "Hack Nerd Font",
  "terminal.integrated.fontWeightBold": "bold",
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.tabs.location": "left",
  "terminal.integrated.fontSize": 10,
  "terminal.integrated.fontWeight": "normal",
  /* ===============================
       üìë Language Formatters
    =============================== */
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  /* ===============================
       üêç Python Settings
    =============================== */
  "isort.args": ["--profile", "black"],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.indexing": true,
  "python.analysis.logLevel": "Error",
  "python.autoComplete.extraPaths": ["${workspaceFolder}/app"],
  "python.analysis.extraPaths": ["${workspaceFolder}/app"],
  "python.analysis.packageIndexDepths": [
    {
      "name": "",
      "depth": 20,
      "includeAllSymbols": true
    }
  ],
  /* ===============================
       ‚òï Java Settings
    =============================== */
  "java.compile.nullAnalysis.mode": "automatic",
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.dependency.packagePresentation": "hierarchical",
  "java.project.sourcePaths": ["src"],
  "java.project.outputPath": "bin",
  "java.project.referencedLibraries": ["lib/**/*.jar"],
  /* ===============================
       üì¶ Git & GitLens
    =============================== */
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",
  "gitlens.views.commitDetails.files.layout": "tree",
  "gitlens.graph.minimap.additionalTypes": [
    "localBranches",
    "stashes",
    "pullRequests",
    "remoteBranches",
    "tags"
  ],
  "gitlens.graph.scrollMarkers.additionalTypes": [
    "localBranches",
    "stashes",
    "remoteBranches",
    "tags",
    "pullRequests"
  ],
  "gitlens.graph.minimap.enabled": false,
  /* ===============================
       üìí Markdown & Jupyter
    =============================== */
  "markdown-preview-enhanced.scrollSync": false,
  "markdown-preview-enhanced.previewTheme": "one-dark.css",
  "markdown-preview-enhanced.revealjsTheme": "black.css",
  "markdown-preview-enhanced.enablePreviewZenMode": true,
  "jupyter.askForKernelRestart": false,
  "jupyter.interactiveWindow.textEditor.executeSelection": true,
  "jupyter.logging.level": "error",
  /* ===============================
       üõ† Extensions / Plugins
    =============================== */
  "vscode_custom_css.imports": [
    "file:///C:/Users/dongu/AppData/Roaming/Code/User/custom-vscode.css"
  ],
  "liveServer.settings.donotShowInfoMsg": true,
  "redhat.telemetry.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": false,
    "scminput": true,
    "javascript": true
  },
  "indentRainbow.colors": [
    "rgba(216,243,220,0.08)",
    "rgba(183,228,199,0.08)",
    "rgba(149,213,178,0.08)",
    "rgba(116,198,157,0.08)",
    "rgba(82,183,136,0.08)",
    "rgba(64,145,108,0.08)",
    "rgba(45,106,79,0.08)",
    "rgba(27,67,50,0.08)",
    "rgba(8,28,21,0.08)",
    "rgba(21,8,28,0.08)",
    "rgba(50,27,67,0.08)",
    "rgba(79,45,106,0.08)",
    "rgba(108,64,145,0.08)",
    "rgba(136,82,183,0.08)",
    "rgba(157,116,198,0.08)",
    "rgba(178,149,213,0.08)",
    "rgba(199,183,228,0.08)",
    "rgba(220,216,243,0.08)",
    "rgba(243,220,216,0.08)",
    "rgba(228,199,183,0.08)"
  ],
  "todo-tree.general.tags": ["TODO", "FIXME", "README", "REF", "WARN"],
  "todo-tree.tree.autoRefresh": true,
  "todo-tree.highlights.useColourScheme": true,
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "gutterIcon": true,
      "foreground": "#000000",
      "background": "#ad7d13"
    },
    "FIXME": {
      "icon": "alert",
      "gutterIcon": true,
      "foreground": "#000000",
      "background": "#f34e2e"
    },
    "README": {
      "icon": "eye",
      "foreground": "#000000",
      "background": "#648843"
    },
    "REF": {
      "icon": "link",
      "gutterIcon": true,
      "foreground": "#000000",
      "background": "#4a7beb"
    },
    "WARN": {
      "icon": "warning",
      "gutterIcon": true,
      "foreground": "#000000",
      "background": "#d0f42c"
    }
  },
  /* ===============================
       üé® Workbench Custom Colors
    =============================== */
  "workbench.colorCustomizations": {
    "editorLineNumber.activeForeground": "#cafe96",
    "statusBar.background": "#282c34",
    "statusBar.foreground": "#7deb90",
    "editor.lineHighlightBackground": "#282c34",
    "statusBarItem.remoteBackground": "#282c34",
    "statusBarItem.remoteForeground": "#7deb90"
  },
  /* ===============================
       üåê Remote & DB
    =============================== */
  "remote.SSH.remotePlatform": {
    "0.tcp.ap.ngrok.io": "linux"
  },
  "database-client.autoSync": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "explorer.confirmDelete": false,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "git.enableSmartCommit": true,
  /* ===============================
       üåê Language & Encoding Settings (for Vietnamese support)
    =============================== */
  "files.encoding": "utf8",
  "files.autoGuessEncoding": true,
  "editor.detectIndentation": true,
  /* ===============================
       üñ•Ô∏è IBus Integration (Optional)
    =============================== */
  "terminal.integrated.shellArgs.linux": [],
  "terminal.integrated.inheritEnv": true,
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.pptx": "default"
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "workbench.colorTheme": "Bearded Theme HC Ebony"
}

{
  "window.zoomLevel": 0.8,
  "window.customTitleBarVisibility": "windowed",
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.wrapTabs": true,
  "workbench.view.alwaysShowHeaderActions": false,
  "workbench.iconTheme": "vscode-great-icons",
  "workbench.colorTheme": "One Dark Pro Monokai Darker",
  "workbench.activityBar.location": "bottom",
  "explorer.compactFolders": false,

  "editor.minimap.enabled": true,
  "editor.wordWrap": "on",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.lineNumbers": "on",
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.fontSize": 13.4,
  "editor.fontFamily": "'FiraCode Nerd Font Mono', monospace",
  "editor.fontLigatures": true,

  "terminal.integrated.env.linux": {
    "NVM_DIR": "/home/iuhane/.nvm",
    "PATH": "/home/iuhane/.nvm/versions/node/v22.*/bin:${env:PATH}",
    "LANG": "en_US.UTF-8"
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "path": "/usr/bin/zsh"
    },
    "bash": {
      "path": "/usr/bin/bash"
    }
  },
  "terminal.integrated.fontFamily": "Hack Nerd Font",
  "terminal.integrated.fontWeightBold": "bold",
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.tabs.location": "left",
  "terminal.integrated.fontSize": 10,
  "terminal.integrated.fontWeight": "normal",

  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  "isort.args": [
    "--profile",
    "black"
  ],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.indexing": true,
  "python.analysis.logLevel": "Error",
  "python.autoComplete.extraPaths": [
    "${workspaceFolder}/app"
  ],
  "python.analysis.extraPaths": [
    "${workspaceFolder}/app"
  ],
  "python.analysis.packageIndexDepths": [
    {
      "name": "",
      "depth": 20,
      "includeAllSymbols": true
    }
  ],

  "java.compile.nullAnalysis.mode": "automatic",
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.dependency.packagePresentation": "hierarchical",
  "java.project.sourcePaths": [
    "src"
  ],
  "java.project.outputPath": "bin",
  "java.project.referencedLibraries": [
    "lib/**/*.jar"
  ],

  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",
  "gitlens.views.commitDetails.files.layout": "tree",
  "gitlens.graph.minimap.additionalTypes": [
    "localBranches",
    "stashes",
    "pullRequests",
    "remoteBranches",
    "tags"
  ],
  "gitlens.graph.scrollMarkers.additionalTypes": [
    "localBranches",
    "stashes",
    "remoteBranches",
    "tags",
    "pullRequests"
  ],
  "gitlens.graph.minimap.enabled": false,

  "markdown-preview-enhanced.scrollSync": false,
  "markdown-preview-enhanced.previewTheme": "one-dark.css",
  "markdown-preview-enhanced.revealjsTheme": "black.css",
  "markdown-preview-enhanced.enablePreviewZenMode": true,
  "jupyter.askForKernelRestart": false,
  "jupyter.interactiveWindow.textEditor.executeSelection": true,
  "jupyter.logging.level": "error",

  "liveServer.settings.donotShowInfoMsg": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": true,
    "javascript": true
  },
  "indentRainbow.colors": [
    "rgba(216,243,220,0.08)",
    "rgba(183,228,199,0.08)",
    "rgba(149,213,178,0.08)",
    "rgba(116,198,157,0.08)",
    "rgba(82,183,136,0.08)",
    "rgba(64,145,108,0.08)",
    "rgba(45,106,79,0.08)",
    "rgba(27,67,50,0.08)",
    "rgba(8,28,21,0.08)",
    "rgba(21,8,28,0.08)",
    "rgba(50,27,67,0.08)",
    "rgba(79,45,106,0.08)",
    "rgba(108,64,145,0.08)",
    "rgba(136,82,183,0.08)",
    "rgba(157,116,198,0.08)",
    "rgba(178,149,213,0.08)",
    "rgba(199,183,228,0.08)",
    "rgba(220,216,243,0.08)",
    "rgba(243,220,216,0.08)",
    "rgba(228,199,183,0.08)"
  ],
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "README",
    "REF",
    "WARN"
  ],
  "todo-tree.tree.autoRefresh": true,
  "todo-tree.highlights.useColourScheme": true,
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "gutterIcon": true,
      "foreground": "#000000",
      "background": "#ad7d13"
    },
    "FIXME": {
      "icon": "alert",
      "gutterIcon": true,
      "foreground": "#000000",
      "background": "#f34e2e"
    },
    "README": {
      "icon": "eye",
      "foreground": "#000000",
      "background": "#648843"
    },
    "REF": {
      "icon": "link",
      "gutterIcon": true,
      "foreground": "#000000",
      "background": "#4a7beb"
    },
    "WARN": {
      "icon": "warning",
      "gutterIcon": true,
      "foreground": "#000000",
      "background": "#d0f42c"
    }
  },

  "workbench.colorCustomizations": {
    "editorLineNumber.activeForeground": "#cafe96",
    "statusBar.background": "#282c34",
    "statusBar.foreground": "#7deb90",
    "editor.lineHighlightBackground": "#282c34",
    "statusBarItem.remoteBackground": "#282c34",
    "statusBarItem.remoteForeground": "#7deb90"
  },

  "remote.SSH.remotePlatform": {
    "0.tcp.ap.ngrok.io": "linux"
  },
  "database-client.autoSync": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "explorer.confirmDelete": false,
  "gitlens.ai.model": "gitkraken",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "git.enableSmartCommit": true,

  "files.encoding": "utf8",
  "files.autoGuessEncoding": true,
  "editor.detectIndentation": true,

  "terminal.integrated.shellArgs.linux": [],
  "terminal.integrated.inheritEnv": true,

  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.pptx": "default"
  },

  "cSpell.words": [
    "Agoda",
    "CDNURL",
    "Checkin",
    "Criterias",
    "dtos",
    "gorm",
    "Klook",
    "noti",
    "pgvector",
    "tcent",
    "topup",
    "Tripc",
    "unaccent",
    "varchar"
  ],

  "liveServer.settings.port": 5501
}
